<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Регистрация</title>
</head>
<body style="margin:0; padding:0; height:100vh; display:flex; justify-content:center; align-items:center; background: linear-gradient(135deg, #6a11cb, #2575fc); font-family: Arial, sans-serif;">

  <div style="background: rgba(255,255,255,0.95); padding: 30px; border-radius:15px; width:320px; box-shadow: 0 10px 25px rgba(0,0,0,0.3); text-align:center;">
    
    <!-- Форма регистрации -->
    <div id="registerDiv">
      <h2 style="margin-bottom:25px; color:#333;">Регистрация</h2>
      <input type="text" id="username" placeholder="Имя пользователя" required 
             style="width:100%; padding:10px; font-size:16px; border:1px solid #aaa; border-radius:5px; margin-bottom:15px;">
      <input type="password" id="password" placeholder="Пароль" required 
             style="width:100%; padding:10px; font-size:16px; border:1px solid #aaa; border-radius:5px; margin-bottom:15px;">
      <button id="registerBtn" style="width:100%; padding:12px; background:#2575fc; color:white; font-size:16px; border:none; border-radius:8px; cursor:pointer;">
        Создать аккаунт
      </button>
      <p id="error" style="color:red; margin-top:10px;"></p>
    </div>

    <!-- Блок приветствия (скрыт изначально) -->
    <div id="welcomeDiv" style="display:none;">
      <h1 id="welcomeMessage" style="color:#333;"></h1>
    </div>

  </div>

  <script>
    const registerBtn = document.getElementById("registerBtn");
    const error = document.getElementById("error");

    registerBtn.addEventListener("click", function(){
      const username = document.getElementById("username").value.trim();
      const password = document.getElementById("password").value.trim();

      if(!username || !password){
        error.textContent = "Заполните все поля!";
        return;
      }

      // Сохраняем имя пользователя (можно потом использовать)
      localStorage.setItem("username", username);

      // Скрываем форму и показываем приветствие
      document.getElementById("registerDiv").style.display = "none";
      document.getElementById("welcomeDiv").style.display = "block";

      document.getElementById("welcomeMessage").innerText = `Добро пожаловать, ${username}!`;
    });
  </script>

</body>
</html>
